{
  "manifest_version": 3,
  "name": "Icarus",
  "version": "0.0.1",
  "description": "Predict Your Next Tweet's Virality",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icarus.png",
      "32": "icarus.png",
      "48": "icarus.png",
      "128": "icarus.png"
    }
  },
  "icons": {
    "16": "icarus.png",
    "32": "icarus.png",
    "48": "icarus.png",
    "128": "icarus.png"
  },
  "permissions": ["storage"],
  "host_permissions": [
    "https://api.x.com/*",
    "https://api.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  }
}
